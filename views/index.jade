  body.connexion
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.pull-left(href='/')
            img.img-responsive(alt='Croaker', src='/images/croaker_icon.png')
          a.navbar-brand(href='/')
            .Croaker-title Croaker
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/')
                | Connexion 
                span.sr-only (current)
            li
              a(href='/home') Accueil
          form.navbar-form.navbar-left(role='search')
            .form-group
              input.form-control(type='text', placeholder='Search')
            button.btn.btn-default(type='submit') Submit
        // /.navbar-collapse
      // /.container-fluid
    section
      .formulaires
        // Formulaire de connexion
        .formulaire1
          form.form-horizontal(role='form', action='/login', method='post')
            .form-group
              .col-sm-12
                input#inputEmail3.form-control(type='name', name='username', placeholder='Nom')
            .form-group
              .col-sm-12
                input#inputPassword3.form-control(type='password',name ='password', placeholder='Mot de passe')
            .form-group
              .col-sm-offset-0.col-sm-12
                button.btn.btn-success(type='submit') Connexion
        .formulaire2
          p Pas encore membre ?
          // Formulaire d'inscription
          form.form-horizontal(role='form', action='/signup', method='post')
            .form-group
              .col-sm-12
                input#inputEmail3.form-control(type='name', name='username', placeholder='Nom complet')
            .form-group
              .col-sm-12
                input#inputEmail3.form-control(type='email',name='email', placeholder='Email')
            .form-group
              .col-sm-12
                input#inputPassword3.form-control(type='password',name='password', placeholder='Mot de passe')
            .form-group
              .col-sm-offset-0.col-sm-12
                button.btn.btn-success(type='submit') S'inscrire
      footer
        .footer
          ul.navbar-footer
            li
              a(href='/home') Accueil
